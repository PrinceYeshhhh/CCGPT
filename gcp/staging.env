# ============================================
# Google Cloud Run Staging Configuration
# ============================================
# This file contains deployment configuration for Google Cloud Run staging environment
# Source this file in your deployment scripts

# Project Configuration
PROJECT_ID=your-staging-project-id
REGION=us-central1
SERVICE_ACCOUNT=customercaregpt-sa@your-staging-project-id.iam.gserviceaccount.com

# Container Registry
GCR_REGISTRY=gcr.io/your-staging-project-id
IMAGE_TAG=staging

# Service Configuration
BACKEND_SERVICE_NAME=customercaregpt-backend-staging
FRONTEND_SERVICE_NAME=customercaregpt-frontend-staging
WORKER_SERVICE_NAME=customercaregpt-worker-staging
CHROMADB_SERVICE_NAME=customercaregpt-chromadb-staging

# Resource Limits (smaller for staging)
CPU_LIMIT=0.5
MEMORY_LIMIT=512Mi
MAX_INSTANCES=3
MIN_INSTANCES=0
TIMEOUT_SECONDS=300

# Cloud SQL
CLOUD_SQL_INSTANCE_NAME=customercaregpt-db-staging
CLOUD_SQL_DATABASE_NAME=customercaregpt_staging
CLOUD_SQL_USER=postgres
CLOUD_SQL_PASSWORD=your-staging-password

# Redis (Memorystore)
REDIS_INSTANCE_NAME=customercaregpt-redis-staging
REDIS_MEMORY_SIZE=1
REDIS_TIER=basic

# URLs (will be set after deployment)
BACKEND_URL=https://customercaregpt-backend-staging-xxxxx-uc.a.run.app
FRONTEND_URL=https://customercaregpt-frontend-staging.vercel.app
CHROMADB_URL=https://customercaregpt-chromadb-staging-xxxxx-uc.a.run.app
