# ============================================
# Google Cloud Run Production Configuration
# ============================================
# This file contains deployment configuration for Google Cloud Run
# Source this file in your deployment scripts

# Project Configuration
PROJECT_ID=your-production-project-id
REGION=us-central1
SERVICE_ACCOUNT=customercaregpt-sa@your-production-project-id.iam.gserviceaccount.com

# Container Registry
GCR_REGISTRY=gcr.io/your-production-project-id
IMAGE_TAG=latest

# Service Configuration
BACKEND_SERVICE_NAME=customercaregpt-backend
FRONTEND_SERVICE_NAME=customercaregpt-frontend
WORKER_SERVICE_NAME=customercaregpt-worker
CHROMADB_SERVICE_NAME=customercaregpt-chromadb

# Resource Limits
CPU_LIMIT=1
MEMORY_LIMIT=1Gi
MAX_INSTANCES=10
MIN_INSTANCES=0
TIMEOUT_SECONDS=300

# Cloud SQL
CLOUD_SQL_INSTANCE_NAME=customercaregpt-db
CLOUD_SQL_DATABASE_NAME=customercaregpt
CLOUD_SQL_USER=postgres
CLOUD_SQL_PASSWORD=your-secure-password

# Redis (Memorystore)
REDIS_INSTANCE_NAME=customercaregpt-redis
REDIS_MEMORY_SIZE=1
REDIS_TIER=basic

# URLs (will be set after deployment)
BACKEND_URL=https://customercaregpt-backend-xxxxx-uc.a.run.app
FRONTEND_URL=https://customercaregpt-frontend.vercel.app
CHROMADB_URL=https://customercaregpt-chromadb-xxxxx-uc.a.run.app
