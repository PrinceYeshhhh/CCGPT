# ============================================
# Google Cloud Run Development Configuration
# ============================================
# This file contains deployment configuration for Google Cloud Run development environment
# Source this file in your deployment scripts

# Project Configuration
PROJECT_ID=your-dev-project-id
REGION=us-central1
SERVICE_ACCOUNT=customercaregpt-sa@your-dev-project-id.iam.gserviceaccount.com

# Container Registry
GCR_REGISTRY=gcr.io/your-dev-project-id
IMAGE_TAG=dev

# Service Configuration
BACKEND_SERVICE_NAME=customercaregpt-backend-dev
FRONTEND_SERVICE_NAME=customercaregpt-frontend-dev
WORKER_SERVICE_NAME=customercaregpt-worker-dev
CHROMADB_SERVICE_NAME=customercaregpt-chromadb-dev

# Resource Limits (minimal for development)
CPU_LIMIT=0.25
MEMORY_LIMIT=256Mi
MAX_INSTANCES=2
MIN_INSTANCES=0
TIMEOUT_SECONDS=300

# Cloud SQL
CLOUD_SQL_INSTANCE_NAME=customercaregpt-db-dev
CLOUD_SQL_DATABASE_NAME=customercaregpt_dev
CLOUD_SQL_USER=postgres
CLOUD_SQL_PASSWORD=your-dev-password

# Redis (Memorystore)
REDIS_INSTANCE_NAME=customercaregpt-redis-dev
REDIS_MEMORY_SIZE=1
REDIS_TIER=basic

# URLs (will be set after deployment)
BACKEND_URL=https://customercaregpt-backend-dev-xxxxx-uc.a.run.app
FRONTEND_URL=https://customercaregpt-frontend-dev.vercel.app
CHROMADB_URL=https://customercaregpt-chromadb-dev-xxxxx-uc.a.run.app
