# Database Configuration
DATABASE_URL=postgresql+psycopg2://user:password@postgres:5432/customercare
REDIS_URL=redis://redis:6379/0

# Vector Database
CHROMA_URL=http://chromadb:8000
CHROMA_SETTINGS={"anonymized_telemetry": false}

# API Keys
GEMINI_API_KEY=your-gemini-api-key
JWT_SECRET=supersecretkey

# Environment
ENVIRONMENT=development

# Frontend Configuration
VITE_API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000

# File Upload Settings
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_BYTES=10485760  # 10MB
ALLOWED_FILE_TYPES=.pdf,.docx,.csv,.xlsx
RQ_QUEUE_NAME=ingest

# S3 Storage (Optional)
USE_S3=false
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key

# Chunking Settings
MAX_CHUNK_TOKENS=600
CHUNK_OVERLAP_TOKENS=100

# CORS Settings
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Security Settings
SECRETS_PROVIDER=env
MAX_REQUEST_SIZE=10485760
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Production Security
ENABLE_SECURITY_HEADERS=true
ENABLE_INPUT_VALIDATION=true
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true

# Secrets Management (Production)
# AWS Secrets Manager
AWS_REGION=us-east-1
# AZURE_KEY_VAULT_URL=https://your-vault.vault.azure.net/
# VAULT_URL=http://localhost:8200
# VAULT_TOKEN=your-vault-token

# JWT Settings
JWT_SECRET=supersecretkey
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
