# CustomerCareGPT Development Environment Configuration
# Copy this file to .env.development or .env for local development

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite for local development (default)
DATABASE_URL=sqlite:///./dev.db

# Or use PostgreSQL for local development
# DATABASE_URL=postgresql://postgres:password@localhost:5432/customercaregpt_dev

# Database Pool Configuration
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=5
DB_POOL_TIMEOUT=60
DB_POOL_RECYCLE=1800

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Local Redis (default)
REDIS_URL=redis://localhost:6379

# Redis Configuration
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=20
REDIS_RETRY_ON_TIMEOUT=true
REDIS_SOCKET_KEEPALIVE=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secrets (Use simple values for development)
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET=dev-jwt-secret-change-in-production

# CORS Configuration (Development origins)
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://127.0.0.1:3000"]
ALLOWED_HOSTS=["localhost","127.0.0.1","0.0.0.0"]

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Google Gemini API (Get from Google AI Studio)
GEMINI_API_KEY=your_gemini_api_key_here

# ChromaDB Configuration (Local development)
CHROMA_URL=http://localhost:8001
CHROMA_PERSIST_DIRECTORY=./chroma_data
CHROMA_AUTH_CREDENTIALS=

# =============================================================================
# STRIPE BILLING CONFIGURATION
# =============================================================================
# Stripe API Keys (Use test keys for development)
STRIPE_API_KEY=sk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe URLs (Local development)
STRIPE_SUCCESS_URL=http://localhost:3000/billing/success
STRIPE_CANCEL_URL=http://localhost:3000/billing/cancel

# Stripe Price IDs (Test price IDs)
STRIPE_STARTER_PRICE_ID=price_starter_test_id
STRIPE_PRO_PRICE_ID=price_pro_test_id
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_test_id

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email Provider (Use console for development)
EMAIL_PROVIDER=console

# Console Email (prints to console)
FROM_EMAIL=dev@localhost
SES_FROM_EMAIL=dev@localhost

# Or use SMTP for testing
# EMAIL_PROVIDER=smtp
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# Local file storage for development
USE_S3=false
USE_GCS=false
UPLOAD_DIR=./uploads

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Sentry Error Tracking (Optional for development)
SENTRY_DSN=

# Prometheus Metrics
PROMETHEUS_ENABLED=true
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Base URLs (Local development)
PUBLIC_BASE_URL=http://localhost:8000
API_BASE_URL=http://localhost:8000

# =============================================================================
# SECURITY FEATURES
# =============================================================================
# Security Headers (Relaxed for development)
ENABLE_SECURITY_HEADERS=true
ENABLE_CSP=false
ENABLE_HSTS=false

# Rate Limiting (Relaxed for development)
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60
RATE_LIMIT_WORKSPACE_PER_MIN=1000
RATE_LIMIT_EMBED_PER_MIN=1000

# Input Validation
ENABLE_INPUT_VALIDATION=true
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=["application/pdf","text/plain","text/markdown","application/vnd.openxmlformats-officedocument.wordprocessingml.document"]

# =============================================================================
# VECTOR SEARCH CONFIGURATION
# =============================================================================
VECTOR_CACHE_TTL=60
VECTOR_CACHE_MAX_SIZE=100
VECTOR_SEARCH_DEFAULT_TOP_K=5
VECTOR_SEARCH_SIMILARITY_THRESHOLD=0.7
VECTOR_SEARCH_CACHE_TTL=300

# =============================================================================
# RAG CONFIGURATION
# =============================================================================
RAG_DEFAULT_TOP_K=6
RAG_MAX_CONTEXT_LENGTH=4000
RAG_CONFIDENCE_THRESHOLD=0.5

# =============================================================================
# CHAT CONFIGURATION
# =============================================================================
CHAT_MAX_MESSAGES=50
CHAT_SESSION_TIMEOUT=3600
CHAT_TYPING_INDICATOR_DELAY=1000

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
WEBSOCKET_MAX_CONNECTIONS=100
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=10
WEBSOCKET_MAX_RECONNECT_ATTEMPTS=5

# =============================================================================
# WIDGET CONFIGURATION
# =============================================================================
WIDGET_DEFAULT_TITLE=Customer Support (Dev)
WIDGET_DEFAULT_PLACEHOLDER=Ask me anything...
WIDGET_DEFAULT_PRIMARY_COLOR=#4f46e5
WIDGET_DEFAULT_SECONDARY_COLOR=#f8f9fa
WIDGET_DEFAULT_TEXT_COLOR=#111111
WIDGET_DEFAULT_POSITION=bottom-right
WIDGET_DEFAULT_MAX_MESSAGES=50
WIDGET_DEFAULT_Z_INDEX=10000

# =============================================================================
# MULTI-LANGUAGE SUPPORT
# =============================================================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=["en","es","fr","de","it","pt","ru","zh","ja","ko"]
AUTO_DETECT_LANGUAGE=true

# =============================================================================
# A/B TESTING
# =============================================================================
AB_TESTING_ENABLED=false
AB_TESTING_DEFAULT_TRAFFIC_SPLIT=0.5

# =============================================================================
# TOKEN LIMITS
# =============================================================================
DAILY_TOKEN_LIMIT=100000
MONTHLY_TOKEN_LIMIT=1000000

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
EMBEDDING_BATCH_SIZE=32
EMBEDDING_CACHE_SIZE=100

# =============================================================================
# CHUNKING CONFIGURATION
# =============================================================================
MAX_CHUNK_TOKENS=512
CHUNK_OVERLAP_TOKENS=50

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
ADMIN_EMAIL=admin@localhost

# =============================================================================
# NOTES
# =============================================================================
# 1. This configuration is optimized for local development
# 2. Uses SQLite by default for simplicity
# 3. Relaxed security settings for easier development
# 4. Higher rate limits for testing
# 5. Console email for easy debugging
# 6. Local file storage instead of cloud storage
