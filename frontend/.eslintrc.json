{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": { "jsx": true }
  },
  "plugins": [
    "@typescript-eslint",
    "react-hooks",
    "react-refresh"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react-hooks/recommended"
  ],
  "ignorePatterns": [
    "dist/",
    "node_modules/",
    "coverage/",
    "storybook-static/"
  ],
  "rules": {
    "react-refresh/only-export-components": "off"
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "parserOptions": { "project": null }
    },
    {
      "files": [
        "e2e/**/*.{ts,tsx}",
        "src/**/__tests__/**/*.{ts,tsx}",
        "**/*.test.{ts,tsx}"
      ],
      "env": { "node": true, "browser": true }
    }
  ]
}


