# ============================================
# CustomerCareGPT Frontend Local Development
# ============================================
# This file is for local development only
# Copy this to .env.local for local testing

# ============================================
# REQUIRED VARIABLES
# ============================================

# Backend API URL (Local)
VITE_API_URL=http://localhost:8000/api/v1

# WebSocket URL (Local)
VITE_WS_URL=ws://localhost:8000/ws

# ============================================
# OPTIONAL VARIABLES
# ============================================

# API Base URL (Alternative to VITE_API_URL)
VITE_API_BASE_URL=http://localhost:8000

# Demo Mode (for testing without authentication)
VITE_DEMO_MODE=false

# Analytics (Disabled for local)
VITE_ANALYTICS_ID=

# Error Tracking (Disabled for local)
VITE_SENTRY_DSN=

# Feature Flags
VITE_ENABLE_CHAT_WIDGET=true
VITE_ENABLE_ADMIN_DASHBOARD=true
VITE_ENABLE_BILLING=true

# Development
NODE_ENV=development
