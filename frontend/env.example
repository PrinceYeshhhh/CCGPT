# ============================================
# CustomerCareGPT Frontend Environment Variables
# ============================================
# Copy this file to .env.local for local development
# Set these in Vercel dashboard for production

# ============================================
# REQUIRED VARIABLES
# ============================================

# Backend API URL
VITE_API_URL=https://customercaregpt-backend-xxxxx-uc.a.run.app/api/v1

# WebSocket URL
VITE_WS_URL=wss://customercaregpt-backend-xxxxx-uc.a.run.app/ws

# ============================================
# OPTIONAL VARIABLES
# ============================================

# Analytics (Optional)
VITE_ANALYTICS_ID=your-analytics-id

# Error Tracking (Optional)
VITE_SENTRY_DSN=your-sentry-dsn

# Demo Mode (Optional)
VITE_DEMO_MODE=false

# API Base URL (Alternative to VITE_API_URL)
VITE_API_BASE_URL=https://customercaregpt-backend-xxxxx-uc.a.run.app

# ============================================
# DEVELOPMENT OVERRIDES
# ============================================
# Uncomment for local development

# VITE_API_URL=http://localhost:8000/api/v1
# VITE_WS_URL=ws://localhost:8000/ws
# VITE_DEMO_MODE=true
