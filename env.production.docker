# CustomerCareGPT Production Docker Environment Configuration
# This file contains production environment variables for Docker deployment

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=customercaregpt
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://postgres:your_secure_postgres_password_here@postgres:5432/customercaregpt

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_secure_redis_password_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your_super_secret_key_here_change_this_in_production
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production
ENCRYPTION_KEY=your_encryption_key_here_optional

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here
STRIPE_API_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# CHROMADB CONFIGURATION
# =============================================================================
CHROMA_URL=http://chromadb:8001
CHROMA_AUTH_CREDENTIALS=
CHROMA_AUTH_PROVIDER=

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_PROVIDER=ses
FROM_EMAIL=noreply@yourdomain.com
SES_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_API_KEY=

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
USE_S3=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# =============================================================================
# API CONFIGURATION
# =============================================================================
PUBLIC_BASE_URL=https://api.yourdomain.com
API_BASE_URL=https://api.yourdomain.com

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=["https://yourdomain.com","https://app.yourdomain.com"]
ALLOWED_HOSTS=["yourdomain.com","app.yourdomain.com","api.yourdomain.com"]

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_ENABLED=true
METRICS_ENABLED=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
GUNICORN_WORKERS=4
DB_POOL_SIZE=50
DB_MAX_OVERFLOW=30
REDIS_MAX_CONNECTIONS=100

# =============================================================================
# GRAFANA CONFIGURATION
# =============================================================================
GRAFANA_PASSWORD=your_secure_grafana_password_here
